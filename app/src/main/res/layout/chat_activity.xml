<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="1"
    tools:context="hk.edu.cuhk.ie.jiang.chatroom.chat_activity">

    <hk.edu.cuhk.ie.iems5722.group4_our_days.SnowView
        android:id="@+id/snow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tileSize="24" />

            <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/editText"
            android:layout_alignParentTop="true"
            android:divider="#FFFFFF"
            android:dividerHeight="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:src="@drawable/sendbutton"
        android:gravity="end"
        android:id="@+id/sendButton"
        android:background="#ffffff"
        android:layout_marginRight="4dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/sendImage" />
    <ImageButton
        android:layout_toLeftOf="@+id/sendButton"
        android:layout_alignParentBottom="true"
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:src="@drawable/image"
        android:gravity="end"
        android:id="@+id/sendImage"
        android:layout_alignTop="@+id/editText" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@layout/pop_rec"
        android:id="@+id/editText"
        android:inputType="none"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/sendImage"
        android:layout_toStartOf="@+id/sendImage">
    </EditText>

</RelativeLayout>